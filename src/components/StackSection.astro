---
import "../global.css";
---

<section
  id="stack"
  class="px-5 h-[100svh] md:h-[80svh] flex flex-col justify-center md:px-[28rem] 2xl:px-[30rem] 3xl:px-[40rem] 4xl:px-[50rem] stack-section"
>
  <div>
    <h2 class="text-2xl font-bold text-primary font-heading mb-4 stack-title">
      Outils
    </h2>
    <ul class="grid grid-cols-2 md:grid-cols-3 gap-6">
      <li class="stack-item">
        <p>Javascript</p>
      </li>
      <li class="stack-item">
        <p>React</p>
      </li>
      <li class="stack-item">
        <p>Next.js</p>
      </li>
      <li class="stack-item">
        <p>Astro</p>
      </li>
      <li class="stack-item">
        <p>Node.js</p>
      </li>
      <li class="stack-item">
        <p>API REST</p>
      </li>
      <li class="stack-item">
        <p>GraphQL</p>
      </li>
      <li class="stack-item">
        <p>mySQL</p>
      </li>
      <li class="stack-item">
        <p>PostgreSQL</p>
      </li>
      <li class="stack-item">
        <p>CI/CD</p>
      </li>
      <li class="stack-item">
        <p>Git</p>
      </li>
      <li class="stack-item">
        <p>Figma</p>
      </li>
      <li class="stack-item">
        <p>Photoshop</p>
      </li>
      <li class="stack-item">
        <p>Illustrator</p>
      </li>
    </ul>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  function initStackAnimation() {
    const stackSection = document.getElementById("stack");
    const stackTitle = document.querySelector(".stack-title");
    const stackItems = document.querySelectorAll(".stack-item");

    if (!stackSection || !stackItems.length) return;

    // Animation du titre
    gsap.fromTo(
      stackTitle,
      {
        opacity: 0,
        y: 30,
      },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: stackSection,
          start: "top 70%",
          end: "top 30%",
          toggleActions: "play none none reverse",
          scrub: 1,
        },
      }
    );

    // Animation des éléments de la stack
    stackItems.forEach((item, index) => {
      gsap.fromTo(
        item,
        {
          opacity: 0,
          y: 50,
          scale: 0.8,
        },
        {
          opacity: 1,
          y: 0,
          scale: 1,
          duration: 0.6,
          ease: "power2.out",
          scrollTrigger: {
            trigger: stackSection,
            start: `top ${70 - index * 2}%`, // Chaque élément se déclenche progressivement
            end: `top ${30 - index * 2}%`,
            toggleActions: "play none none reverse",
            scrub: 1.5,
          },
        }
      );

      // Animation hover
      item.addEventListener("mouseenter", () => {
        gsap.to(item, {
          y: -3,
          scale: 1.02,
          duration: 0.3,
          ease: "power2.out",
        });
        gsap.to(item.querySelector("p"), {
          duration: 0.3,
          ease: "power2.out",
        });
      });

      item.addEventListener("mouseleave", () => {
        gsap.to(item, {
          y: 0,
          scale: 1,
          duration: 0.3,
          ease: "power2.out",
        });
        gsap.to(item.querySelector("p"), {
          duration: 0.3,
          ease: "power2.out",
        });
      });
    });
  }

  // Initialiser quand le DOM est prêt
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initStackAnimation);
  } else {
    initStackAnimation();
  }
</script>

<style>
  /* Styles de base pour les éléments animés */
  .stack-section {
    position: relative;
  }
  .stack-title {
    opacity: 0;
    transform: translateY(30px);
  }

  .stack-item {
    opacity: 0;
    transform: translateY(50px) scale(0.8);
  }

  .stack-item p {
    transition: color 0.3s ease;
  }

  /* Réduction du mouvement pour l'accessibilité */
  @media (prefers-reduced-motion: reduce) {
    .stack-title,
    .stack-item {
      opacity: 1;
      transform: none;
    }
  }
</style>
